<div class = "container">
  <div class = "title">
    <h1> My Profile </h1>
    <%= render 'sessions/stats' %>
    <div class="row text-center">
	    <div class="col-sm-3">
	      <div class="thumbnail">
	        <img src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-person-128.png" alt="...">
	        <div class="caption text-center">
	          <ul>
	            <li><strong> Name: </strong> <%=@user.first_name%></li>
	            <li><strong> Email: </strong> <%=@user.email%></li>
	            <li><strong> About me: </strong> <%=@user.bio%><li/>
	          <br>
	          </ul>  
						<button type="button" class="btn btn-default btn-sm">
						  <span class="glyphicon glyphicon-pencil"> 
						    <%= link_to "Edit", edit_user_path(@user) %>
						  </span>
						</button>
						<button type="button" class="btn btn-default btn-sm">
						  <span class="glyphicon glyphicon-trash">
						    <%= link_to "Delete!", user_path, method: :delete, data: { confirm: "Are you sure you want to delete this profile?"} %> 
						  </span>
						</button>
	        </div>
      </div>
    </div>
  </div>
</div>

        

