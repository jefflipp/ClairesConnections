<h1> Edit your profile! </h1>

<%= form_for @user do |f| %>

	<div class="field">
	  <%= f.label :first_name %><br>
	  <%= f.text_field :first_name %>
	</div>

  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %>
  </div>

  <div class="field">
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </div>

  <div class="picture">
  	<%= f.label :pic %>
    <%= f.file_field :pic %>
  </div>

	<div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  
  <div class ="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

  <% end %>