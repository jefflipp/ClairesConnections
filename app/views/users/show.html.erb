
<div class = "container">
<div class = "title">
  <h1> My Profile </h1>
    <section class="stats">
      <%= render 'sessions/stats' %>
      <br>
      <% if current_user %>
      <%= render 'follow_form'%>
      <% end %>      
    </section>
  <div class="row text-center">
    <div class="col-sm-3">
      <div class="thumbnail">
        <img src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-person-128.png" alt="...">
        <div class="caption text-center">
          <ul>
            <li><strong> Name: </strong> <%=@user.first_name%></li>
            <li><strong> Email: </strong> <%=@user.email%></li>
            <li><strong> About me: </strong> <%=@user.bio%><li/>
          <br>
          </ul>
       
          <% if @user==current_user %>
            <button type="button" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-pencil"> 
              <%= link_to "Edit", edit_user_path(@user) %></span>
            </button>
            <button type="button" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-trash">
              <%= link_to "Delete!", user_path, method: :delete, data: { confirm: "Are you sure you want to delete this profile?"} %> 
              </span>
            </button>
          <% end %>
        </div>
      </div>
    </div>
</div>

<p><%= link_to "Add an event", new_event_path %> </p>


<h3>My events </h3>
<% @event.each do |event| %>
<div class="row">
  <div class="col-xs-1 col-md-1">
    <a href="#" class="thumbnail">
      <img src="https://www.afplanserv.com/media/100093/qualifying_event_50x50.png?anchor=center&mode=crop&width=50&height=50&rnd=130778996520000000" alt="...">
    </a>
    
  </div>
    <ul> 
      <li><strong>Name: </strong><%= event.title %></li>
      <li><strong>Title: </strong><%= event.description %></li>
      <li><strong>Date: </strong><%= event.date %></li>
      <%#= link_to "Edit", edit_user_event_path %>
    </ul>
</div>
<span class="label"> <%= link_to "More details", event_path %> </span>
<% end %>

	


