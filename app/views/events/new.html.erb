<h1>Submit your event</h1>

<%= form_for @event do |f| %>

<div class="container">
  <h2>Submit an event</h2>
  <form role="form">
    <div class="form-group">
      <label for="email"> Name <% f.label :title %> </label>
      <input type="text" class="form-control" id="name" placeholder="Enter the name of your event">
      <% f.text_field :title %>
    </div>
    <div class="form-group">
      <label for="description">Description: <% f.label :description %></label>
      <input type="text" class="form-control" id="description" placeholder="Enter a brief description of the event">
      <% f.text_field :description %>    
    </div>
    <div class="form-group">
      <label for="date">Date: <% f.label :date %></label>
      <input type="date" class="form-control" id="date" placeholder="What date is the event happening?">  
      <% f.date_field :date %>  
    </div>

    <div class="form-group">
      <label for="start_time">Start Time: <% f.label :start_time %></label>
      <input type="time" class="form-control" id="start_time" placeholder="What date is the event happening?">  
      <% f.datetime_field :start_time %>  
    </div>

    <div class="form-group">
      <label for="start_time">End Time: <% f.label :end_time %></label>
      <input type="time" class="form-control" id="end_time" placeholder="What date is the event happening?">  
      <% f.datetime_field :end_time %>  
    </div>

    <div class="form-group">
      <label for="location">Location: <% f.label :location %></label>
      <input type="location" class="form-control" id="end_time" placeholder="Where is the event happening?">  
      <% f.text_field :location %>  
    </div>

     <div class="form-group">
      <label for="location">Age: <% f.label :for_ages %></label>
      <select class="form-control" id="end_time" placeholder="What date is the event happening?">  
        <option>0-2</option>
        <option>2-4</option>
        <option>5-6</option>
        <option>+6</option>
      </select>
      <% f.text_field :location %>  
    </div>

    <button type="submit" class="btn btn-default">Submit</button> 
  </form>
</div>



  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>
  <div>
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time %>
  </div>
  <div>
    <%= f.label :end_time %>
    <%= f.datetime_field :end_time %>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div>
    <%= f.label :for_ages %>
    <%= f.text_field :for_ages %>
  </div>
  
  <div>
   <button type="button" class="btn btn-success"><%= f.submit %></button>
 
  </div>
<% end %>