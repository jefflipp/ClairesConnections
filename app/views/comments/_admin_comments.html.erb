
<div class = "container">
	<div class="panel panel-default">
	  <!-- Default panel contents -->
	  <div class="panel-heading">All Comments</div>
<!-- Table -->
	<table class="table">
	  <thead>
	    <tr>
	        <th>Title</th>
	        <th>Body</th>
	        <th>User Id</th>
	        <th>Event Id</th>
	        <th>Action</th>
	    </tr>
	   </thead>   
	  
	  	<tbody>
	  		<% @comments.each do |comment| %>
	      <tr>
	        <td> <%= comment.title %> </td>
	        <td> <%= comment.body %> </td>
	        <td> <%= comment.user_id %> </td>
	        <td> <%= comment.event_id %> </td>
	        <td> <%#= link_to "More", event_comments_path %></td>
	        <td> <%#= link_to "Edit", event_comments_path %></td>
	        <td> <%#= link_to "Destroy", event_comments_path %></td>
	    	</tr>
			</tbody>	  
	  <% end %>
		
	  </table>

	</div>
</div>